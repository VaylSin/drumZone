{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

<div class="row">
    <div class="col-12 col-md-6 product_visual"></div>
    <div class="col-12 col-md-6 product_details">
        <h1>{{product.name | capitalize}}</h1>
        <p>{{product.rate}}</p>
        <p>{{product.description}}</p>
        ul>li
    </div>
</div>

    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Sku</th>
                <td>{{ product.sku }}</td>
            </tr>
            <tr>
                <th>StockQuantity</th>
                <td>{{ product.stockQuantity }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ product.isActive ? 'Yes' : 'No' }}</td>
            </tr>

            <tr>
                <th>LightOn</th>
                <td>{{ product.lightOn ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
